{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run C++ with graphics.h",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/output.exe",
            "cwd": "${fileDirname}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
